{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "incremental": false
  },
  "include": [
    "src/index.ts",
    "src/__tests__"
  ],
  "exclude": [
    "stories",
    "browser-tests"
  ]
}
