{
  "name": "yot-web-components",
  "main": "dist/index.js",
  "scripts": {
    "storybook": "concurrently --kill-others --names rollup,storybook \"npm run build:watch\" \"start-storybook --node-resolve --watch --open\"",
    "build-storybook": "build-storybook && mkdir storybook-static/src && cp -r ./src/foundational storybook-static/src/foundational",
    "deploy-storybook": "storybook-to-ghpages --existing-output-dir=storybook-static",
    "tsc:watch": "tsc --watch",
    "lint:eslint": "eslint --ext .ts,.html .",
    "format:eslint": "eslint --ext .ts,.html . --fix",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "build:watch": "rimraf dist && rollup --watch -c rollup.config.js",
    "start:build": "npm run build && es-dev-server --root-dir . --app-index demo/index.html --open --compatibility none",
    "semantic-release": "semantic-release --branches main",
    "precommit": "yarn test && yarn test:browser",
    "test": "jest",
    "test:browser": "yarn build-storybook && yarn test:browser:jest",
    "test:browser:jest": "jest --config browser-tests/jest.config.js"
  },
  "dependencies": {
    "lit-element": "^2.2.1",
    "lit-html": "^1.1.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.5",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@open-wc/building-rollup": "^1.0.0",
    "@open-wc/demoing-storybook": "^2.4.7",
    "@open-wc/eslint-config": "^3.0.0",
    "@open-wc/testing-helpers": "^1.8.6",
    "@rollup/plugin-typescript": "^8.2.1",
    "@storybook/storybook-deployer": "^2.8.10",
    "@testing-library/dom": "^7.23.0",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/user-event": "^12.1.1",
    "@types/expect-puppeteer": "^4.4.3",
    "@types/jest": "^26.0.9",
    "@types/jest-environment-puppeteer": "^4.3.2",
    "@types/jest-image-snapshot": "^3.1.0",
    "@types/puppeteer": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "@wordpress/jest-puppeteer-axe": "^1.9.0",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.1.0",
    "es-dev-server": "^1.23.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.20.0",
    "expect-puppeteer": "^4.4.0",
    "husky": "^6.0.0",
    "jest": "^26.2.2",
    "jest-image-snapshot": "^4.1.0",
    "jest-puppeteer": "^4.4.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.0.4",
    "puppeteer": "^5.2.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-styleguidist": "^11.0.8",
    "rimraf": "^2.6.3",
    "rollup": "^2.52.1",
    "rollup-plugin-copy": "^3.4.0",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.3.0",
    "tslib": "^2.3.0",
    "typescript": "~4.3.4",
    "webpack": "^4.44.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/yearofthedan/yot-web-components.git"
  }
}
